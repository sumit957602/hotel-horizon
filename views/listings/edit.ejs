<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br>
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div>
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" class="form-control" value="<%= listing.title %>" />
        </div>
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
        </div>
        <div>
          <label for="image" class="form-label">Image</label>
          <input name="listing[image]" type="text" class="form-control" value="<%= listing.image %>" />
        </div>
        <div>
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" type="number" class="form-control" value="<%= listing.price %>" />
        </div>
        <div>
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" type="text" class="form-control" value="<%= listing.country %>" />
        </div>
        <div>
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" class="form-control" value="<%= listing.location %>" />
        </div>
        <br>   
        <button class="btn btn-dark">Edit</button>   
    </form>
  </div>
</div>